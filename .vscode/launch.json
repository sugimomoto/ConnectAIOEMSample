{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Run",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": [
        "--app", "backend.app:create_app",
        "run",
        "--port", "5001",
        "--debug"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "python": "${workspaceFolder}/backend/venv/bin/python",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "pytest: All",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "backend/tests/",
        "-v"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "python": "${workspaceFolder}/backend/venv/bin/python",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    },
    {
      "name": "pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "python": "${workspaceFolder}/backend/venv/bin/python",
      "cwd": "${workspaceFolder}",
      "justMyCode": false
    }
  ]
}
